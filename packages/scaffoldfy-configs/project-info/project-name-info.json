{
  "$schema": "../node_modules/@pixpilot/scaffoldfy/schema/scaffoldfy.schema.json",
  "name": "project-name-info",
  "description": "Project name prompt for pnpm-turbo-monorepo-template",
  "extends": [],
  "prompts": [
    {
      "id": "projectName",
      "type": "input",
      "required": true,
      "transformers": ["titlecase"],
      "message": "What is your project name?",
      "default": {
        "type": "exec",
        "value": "node -p \"require('path').basename(process.cwd())\""
      }
    }
  ]
}
