{
  "$schema": "../schema/tasks.schema.json",
  "tasks": [
    {
      "id": "configure-project",
      "name": "Configure Project",
      "description": "Set up project with global configuration",
      "required": true,
      "enabled": true,
      "type": "update-json",
      "prompts": [
        {
          "id": "projectName",
          "type": "input",
          "message": "What is your project name?",
          "default": "my-awesome-app",
          "required": true,
          "global": true
        },
        {
          "id": "projectDescription",
          "type": "input",
          "message": "Project description",
          "default": "An awesome application",
          "global": true
        },
        {
          "id": "projectVersion",
          "type": "input",
          "message": "Initial version",
          "default": "0.1.0",
          "global": true
        },
        {
          "id": "author",
          "type": "input",
          "message": "Author name",
          "global": true
        },
        {
          "id": "license",
          "type": "select",
          "message": "Select a license",
          "choices": [
            { "name": "MIT", "value": "MIT" },
            { "name": "Apache-2.0", "value": "Apache-2.0" },
            { "name": "GPL-3.0", "value": "GPL-3.0" },
            { "name": "ISC", "value": "ISC" },
            { "name": "Unlicense", "value": "Unlicense" }
          ],
          "default": "MIT",
          "global": true
        },
        {
          "id": "includePrivate",
          "type": "confirm",
          "message": "Mark package as private?",
          "default": false
        }
      ],
      "config": {
        "file": "package.json",
        "updates": {
          "name": "{{projectName}}",
          "version": "{{projectVersion}}",
          "description": "{{projectDescription}}",
          "license": "{{license}}",
          "author": "{{author}}",
          "private": "{{includePrivate}}"
        }
      }
    },
    {
      "id": "setup-readme",
      "name": "Setup README",
      "description": "Create README with project information (uses global prompts)",
      "required": true,
      "enabled": true,
      "type": "template",
      "dependencies": ["configure-project"],
      "config": {
        "file": "README.md",
        "template": "# {{projectName}}\n\n{{projectDescription}}\n\n## Installation\n\n```bash\npnpm install\n```\n\n## Author\n\n{{author}}\n\n## License\n\n{{license}}\n"
      }
    },
    {
      "id": "create-license-file",
      "name": "Create LICENSE File",
      "description": "Generate LICENSE file (uses global prompts)",
      "required": false,
      "enabled": true,
      "type": "template",
      "config": {
        "file": "LICENSE",
        "template": "{{license}} License\n\nCopyright (c) 2025 {{author}}\n\nProject: {{projectName}}\n"
      }
    },
    {
      "id": "setup-typescript",
      "name": "Setup TypeScript",
      "description": "Configure TypeScript settings",
      "required": false,
      "enabled": true,
      "type": "update-json",
      "prompts": [
        {
          "id": "tsStrict",
          "type": "confirm",
          "message": "Enable strict TypeScript mode?",
          "default": true
        },
        {
          "id": "tsTarget",
          "type": "select",
          "message": "TypeScript target",
          "choices": [
            { "name": "ES2020", "value": "ES2020" },
            { "name": "ES2021", "value": "ES2021" },
            { "name": "ES2022", "value": "ES2022" },
            { "name": "ESNext", "value": "ESNext" }
          ],
          "default": "ES2022"
        }
      ],
      "config": {
        "file": "tsconfig.json",
        "updates": {
          "compilerOptions": {
            "strict": "{{tsStrict}}",
            "target": "{{tsTarget}}"
          }
        }
      }
    },
    {
      "id": "setup-changelog",
      "name": "Setup CHANGELOG",
      "description": "Create initial CHANGELOG (uses global prompts)",
      "required": false,
      "enabled": true,
      "type": "template",
      "config": {
        "file": "CHANGELOG.md",
        "template": "# Changelog\n\nAll notable changes to {{projectName}} will be documented in this file.\n\n## [{{projectVersion}}] - 2025-10-19\n\n### Added\n\n- Initial release\n"
      }
    },
    {
      "id": "cleanup-example-files",
      "name": "Cleanup Example Files",
      "description": "Remove example and template files",
      "required": false,
      "enabled": true,
      "type": "delete",
      "prompts": [
        {
          "id": "keepExamples",
          "type": "confirm",
          "message": "Keep example files?",
          "default": false
        }
      ],
      "config": {
        "condition": "!keepExamples",
        "paths": ["examples", "test-files", "*.example.*"]
      }
    }
  ]
}
