{
  "prompts": [
    {
      "id": "projectName",
      "type": "input",
      "message": "Project name:",
      "default": "my-project"
    },
    {
      "id": "includeExamples",
      "type": "confirm",
      "message": "Include example files?",
      "default": true
    }
  ],
  "tasks": [
    {
      "id": "create-source",
      "name": "Create source structure",
      "type": "write",
      "config": {
        "file": "templates/base-structure/README.md",
        "template": "# Template Files\n\nThese are base template files for {{projectName}}."
      }
    },
    {
      "id": "copy-structure",
      "name": "Copy template structure to src",
      "type": "copy",
      "config": {
        "from": "templates/base-structure",
        "to": "src/"
      },
      "dependencies": ["create-source"]
    },
    {
      "id": "copy-examples",
      "name": "Copy example files",
      "type": "copy",
      "config": {
        "from": "templates/examples",
        "to": "examples/",
        "condition": "includeExamples === true"
      },
      "dependencies": ["create-source"]
    }
  ]
}
