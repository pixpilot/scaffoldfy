{
  "prompts": [
    {
      "id": "projectName",
      "type": "input",
      "message": "Project name:",
      "default": "my-project"
    },
    {
      "id": "author",
      "type": "input",
      "message": "Author name:",
      "default": "John Doe"
    },
    {
      "id": "includeDocker",
      "type": "confirm",
      "message": "Include Docker support?",
      "default": false
    }
  ],
  "tasks": [
    {
      "id": "create-gitignore",
      "name": "Create .gitignore",
      "type": "write",
      "config": {
        "file": ".gitignore",
        "template": "node_modules/\ndist/\n"
      }
    },
    {
      "id": "append-env-ignore",
      "name": "Add environment files to .gitignore",
      "type": "append",
      "config": {
        "file": ".gitignore",
        "content": "\n# Environment files\n.env\n.env.local\n.env.*.local\n"
      },
      "dependencies": ["create-gitignore"]
    },
    {
      "id": "append-docker-ignore",
      "name": "Add Docker files to .gitignore",
      "type": "append",
      "config": {
        "file": ".gitignore",
        "content": "\n# Docker\n.dockerignore\ndocker-compose.override.yml\n",
        "condition": "includeDocker === true"
      },
      "dependencies": ["append-env-ignore"]
    },
    {
      "id": "create-readme",
      "name": "Create README.md",
      "type": "write",
      "config": {
        "file": "README.md",
        "template": "# {{projectName}}\n"
      }
    },
    {
      "id": "append-readme-author",
      "name": "Append author section to README",
      "type": "append",
      "config": {
        "file": "README.md",
        "template": "\n## Author\n\n{{author}}\n"
      },
      "dependencies": ["create-readme"]
    }
  ]
}
