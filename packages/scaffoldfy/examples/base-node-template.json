{
  "name": "base-node-template",
  "description": "A base Node.js project template with essential configuration tasks",
  "tasks": [
    {
      "id": "update-package",
      "name": "Update package.json",
      "description": "Update package metadata",
      "required": true,
      "enabled": true,
      "type": "update-json",
      "prompts": [
        {
          "id": "projectName",
          "type": "input",
          "message": "Project name",

          "required": true
        },
        {
          "id": "author",
          "type": "input",
          "message": "Author name"
        },
        {
          "id": "repoUrl",
          "type": "input",
          "message": "Repository URL",

          "default": {
            "type": "exec",
            "value": "git config --get remote.origin.url"
          }
        }
      ],
      "config": {
        "file": "package.json",
        "updates": {
          "name": "{{projectName}}",
          "author": "{{author}}",
          "description": "Base Node.js template",
          "repository": {
            "type": "git",
            "url": "{{repoUrl}}"
          }
        }
      }
    },
    {
      "id": "setup-git",
      "name": "Initialize Git",
      "description": "Setup git repository",
      "required": true,
      "enabled": true,
      "type": "git-init",
      "config": {
        "removeExisting": false,
        "initialCommit": true,
        "message": "ðŸŽ‰ Initial commit from template"
      }
    },
    {
      "id": "cleanup-template-files",
      "name": "Cleanup Template Files",
      "description": "Remove template-specific files",
      "required": false,
      "enabled": true,
      "type": "delete",
      "config": {
        "paths": ["TEMPLATE_README.md", "template-tasks.json"]
      }
    }
  ]
}
